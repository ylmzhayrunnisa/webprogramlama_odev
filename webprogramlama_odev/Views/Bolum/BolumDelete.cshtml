@model webprogramlama_odev.Models.Bolum

@{
    ViewData["Title"] = "Bolum Sil";

    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center text-danger">Bölüm Sil</h2>
    <p class="text-center">Bu işlemi gerçekleştirdiğinizde aşağıdaki bölüm kalıcı olarak silinecektir:</p>
    <div class="text-center">
        <h4>@Model.BolumAdi</h4>
    </div>
    <form asp controller="Bolum" asp-action="BolumDelete" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger mt-3">Sil</button>
        <a asp-action="Bolum" class="btn btn-secondary mt-3">Vazgeç</a>
    </form>
</div>
