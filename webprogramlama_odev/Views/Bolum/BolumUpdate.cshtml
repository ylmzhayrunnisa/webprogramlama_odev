@model webprogramlama_odev.Models.Bolum

@{
    ViewData["Title"] = "Bölüm Güncelle";

    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center">Bölüm Güncelle</h2>
    <form asp-controller = "Bolum" asp-action="BolumUpdate" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group">
            <label asp-for="BolumAdi">Bölüm Tarihi</label>
            <input asp-for="BolumAdi" class="form-control" type="text" />
        </div>
        <div class="form-group">
            <label asp-for="HastaSayisi">Hasta Sayısı</label>
            <input asp-for="HastaSayisi" class="form-control" type="text" />
        </div>
        <div class="form-group">
            <label asp-for="BosYatakSayisi">Boş Yatak Sayısı</label>
            <input asp-for="BosYatakSayisi" class="form-control" type="text" />
        </div>
        <button type="submit" class="btn btn-success mt-3">Kaydet</button>
    </form>
</div>