
@{
    ViewData["Title"] = "Randevular";

    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
    /* Genel tablo ayarları */
    table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        font-size: 1em;
        font-family: 'Arial', sans-serif;
        min-width: 600px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15);
        background-color: #fff;
    }

        /* Tablo başlığı */
        table thead tr {
            background-color: #800020; /* Bordo */
            color: #ffffff;
            text-align: left;
            font-weight: bold;
        }

        /* Başlık hücreleri */
        table th, table td {
            padding: 12px 15px;
            text-align: center;
            border-bottom: 1px solid #dddddd;
        }

        /* Zebra desenli satırlar */
        table tbody tr:nth-of-type(even) {
            background-color: #f9e6e9; /* Hafif pembe ton - bordo uyumu */
        }

        /* Hover efekti */
        table tbody tr:hover {
            background-color: #f5d0d7; /* Açık bordo hover */
            cursor: pointer;
        }

    /* Düzenle ve Sil butonları */
    .btn-warning, .btn-danger {
        color: #fff;
        font-size: 0.9em;
        border-radius: 4px;
        padding: 6px 10px;
        transition: background-color 0.3s ease;
    }

    .btn-warning {
        background-color: #b33c50; /* Koyu bordo */
        border: none;
    }

        .btn-warning:hover {
            background-color: #922a3d; /* Daha koyu bordo hover */
        }

    .btn-danger {
        background-color: #800020; /* Bordo */
        border: none;
    }

        .btn-danger:hover {
            background-color: #5f0018; /* Daha koyu bordo hover */
        }

    /* Arama kutusu */
    .input-group input[type="text"] {
        border-radius: 4px;
        padding: 8px 12px;
        font-size: 1em;
        border: 1px solid #b33c50;
    }

    .input-group button {
        background-color: #800020; /* Bordo */
        color: #fff;
        border: none;
        border-radius: 4px;
        padding: 8px 12px;
        transition: background-color 0.3s ease;
    }

        .input-group button:hover {
            background-color: #5f0018; /* Daha koyu bordo */
        }

    /* Yeni Hoca Ekle Butonu */
    a.btn {
        background-color: #b33c50; /* Koyu bordo */
        color: #fff;
        padding: 8px 16px;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

        a.btn:hover {
            background-color: #922a3d; /* Daha koyu bordo */
            color: #fff;
        }
</style>

<h2 class="text-center">Randevular</h2>
<p class="text-center">Bu sayfada randevu bilgilerini görebilirsiniz.</p>

<a asp-controller="HocaMusaitlik" asp-action="HocaMusaitlik" class="btn btn-primary float-end mb-3">Hoca Müsaitlikler</a>

<table class="table table-bordered mt-4">
    <thead>
        <tr>
            <th>Asistan</th>
            <th>Hoca</th>
            <th>Tarih</th>
            <th>Saat</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var randevu in Model)
        {
            <tr>
                <td>@randevu.Asistan.Ad @randevu.Asistan.Soyad</td>
                <td>@randevu.Hoca.Ad @randevu.Hoca.Soyad</td>
                <td>@randevu.Tarih.ToShortDateString()</td>
                <td>@randevu.Saat</td>
            </tr>
        }
    </tbody>
</table>
