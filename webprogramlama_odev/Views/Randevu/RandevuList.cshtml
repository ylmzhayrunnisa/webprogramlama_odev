@model List<webprogramlama_odev.Models.Randevu>

@{
    ViewData["Title"] = "Randevu Yönetimi";

    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
    /* Genel tablo ayarları */
    table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        font-size: 1em;
        font-family: 'Arial', sans-serif;
        min-width: 600px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15);
        background-color: #fff;
    }

        /* Tablo başlığı */
        table thead tr {
            background-color: #800020; /* Bordo */
            color: #ffffff;
            text-align: left;
            font-weight: bold;
        }

        /* Başlık hücreleri */
        table th, table td {
            padding: 12px 15px;
            text-align: center;
            border-bottom: 1px solid #dddddd;
        }

        /* Zebra desenli satırlar */
        table tbody tr:nth-of-type(even) {
            background-color: #f9e6e9; /* Hafif pembe ton - bordo uyumu */
        }

        /* Hover efekti */
        table tbody tr:hover {
            background-color: #f5d0d7; /* Açık bordo hover */
            cursor: pointer;
        }

    /* Düzenle ve Sil butonları */
    .btn-warning, .btn-danger {
        color: #fff;
        font-size: 0.9em;
        border-radius: 4px;
        padding: 6px 10px;
        transition: background-color 0.3s ease;
    }

    .btn-warning {
        background-color: #b33c50; /* Koyu bordo */
        border: none;
    }

        .btn-warning:hover {
            background-color: #922a3d; /* Daha koyu bordo hover */
        }

    .btn-danger {
        background-color: #800020; /* Bordo */
        border: none;
    }

        .btn-danger:hover {
            background-color: #5f0018; /* Daha koyu bordo hover */
        }

    /* Arama kutusu */
    .input-group input[type="text"] {
        border-radius: 4px;
        padding: 8px 12px;
        font-size: 1em;
        border: 1px solid #b33c50;
    }

    .input-group button {
        background-color: #800020; /* Bordo */
        color: #fff;
        border: none;
        border-radius: 4px;
        padding: 8px 12px;
        transition: background-color 0.3s ease;
    }

        .input-group button:hover {
            background-color: #5f0018; /* Daha koyu bordo */
        }

    /* Yeni Hoca Ekle Butonu */
    a.btn {
        background-color: #b33c50; /* Koyu bordo */
        color: #fff;
        padding: 8px 16px;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

        a.btn:hover {
            background-color: #922a3d; /* Daha koyu bordo */
            color: #fff;
        }
</style>

<div class="container mt-4">
    <h2 class="text-center">Randevu Yönetimi</h2>
    <div class="text-right mb-3">
        <a asp-action="RandevuAdd" class="btn btn-success">Yeni Randevu Ekle</a>
        <a asp-controller="HocaMusaitlik" asp-action="HocaMusaitlikList" class="btn btn-primary float-end mb-3">Hoca Müsaitlikler</a>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Asistan</th>
                <th>Hoca</th>
                <th>Tarih</th>
                <th>Saat</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var randevu in Model)
            {
                <tr>
                    <td>@randevu.Id</td>
                    <td>@randevu.Asistan.Ad @randevu.Asistan.Soyad</td>
                    <td>@randevu.Hoca.Ad @randevu.Hoca.Soyad</td>
                    <td>@randevu.Tarih</td>
                    <td>@randevu.Saat</td>
                    <td>
                        <a asp-action="RandevuUpdate" asp-route-id="@randevu.Id" class="btn btn-warning btn-sm">Düzenle</a>
                        <a asp-action="RandevuDelete" asp-route-id="@randevu.Id" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
